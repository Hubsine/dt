{% extends "DtAdminBundle::layout.html.twig" %}

{% form_theme edit_form 'MopaBootstrapBundle:form:fields.html.twig' %}
{% form_theme delete_form 'MopaBootstrapBundle:form:fields.html.twig' %}

{% block headline %}{% trans %} dashboard.about_user.edit {% endtrans %}{% endblock headline %}

{% block content_page_content %}

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input type="submit" value="Edit" />
    {{ form_end(edit_form) }}

    <ul class="list-unstyled list-inline">
        <li>
            <a class="btn btn-default" href="{{ path('dt_admin.about_user.index') }}">{% trans %} dashboard.about_user.back {% endtrans %}</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <button class="btn btn-danger" role="button" type="submit">
                <i class="fa fa-trash-o" aria-hidden="true"></i>
                </button>
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock content_page_content %}
