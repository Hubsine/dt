{% block headline %}{% trans %} dashboard.about_user.new {% endtrans %}{% endblock headline %}

{% block content_page_content %}

    {{ form_start(form, {'method': 'post', 'action': path('dt_admin_about_user_new'), 'attr': {'class': ''}}) }}

    {{ form_widget(form)}}
