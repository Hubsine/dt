{% trans_default_domain 'FOSUserBundle' %}

{% form_theme form 'MopaBootstrapBundle:form:fields.html.twig' %}

{{ form_start(form, { 'action': path('dt_user_parameters_edit', { 'id': app.user.id } ), 'attr': { 'class': 'ajaxForm', 'data-container': 'userParametersContent' } }) }}
    {{ form_widget(form) }}
    <div>
        <button type="submit" class="btn btn-danger">{{ 'change_profile.update'|trans }}</button>
        <div
            data-action="{{ path('dt_user_parameters_edit', { 'id': app.user.id } ) }}" 
            data-container="userParametersContent"
            class="cancelFormToUpdateInAjax btn btn-warning">
            {% trans %} layout.cancel {% endtrans %}
        </div>
    </div>
{{ form_end(form) }}


