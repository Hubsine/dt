{% trans_default_domain 'FOSUserBundle' %}

{% form_theme form 'MopaBootstrapBundle:form:fields.html.twig' %}

{% from 'MopaBootstrapBundle::flash.html.twig' import flash, advanced_flash %}

{% if message is defined %}    
        {{ advanced_flash('success', message, '', true, false, '') }}    
{% endif %}

{% if userPictures is null %}
    {% set message = 'layout.section_empty'|trans%}
    {{ flash('info', message) }}
{% else %}   
    
    <div class="row">
        {% for picture in userPictures %}
        <div class="col-xs-2">
            
        </div>
        {% endfor %}
            {{ form_start(form, { 'action': path('dt_user_user_picture_new', { 'slug': app.user.slug } ), 'attr': { 'id': 'userPicturesForm', 'data-container': 'userLocationContent' } }) }}
            <div class=" col-xs-12 messageContainer">
            </div>
                {{ form_widget(form) }}
                <div row>
                    <div class="col-xs-12">
                    <div class="btn btn-danger add-new">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                    </div>
                    </div>
                </div>
            {{ form_end(form) }}
    </div>
