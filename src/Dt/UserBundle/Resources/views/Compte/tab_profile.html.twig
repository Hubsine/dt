{% trans_default_domain 'FOSUserBundle' %}

{% set tabsContent = 
{
    'moi': {
        'sectionId': 'profile-moi',
        'sectionTitle': 'layout.compte.moi',
        'contentId': 'moiContent',
        'content': controller('DtUserBundle:Compte:showMoi', {'slug': app.request.get('slug') })
    },
    'reseaux_sociaux': {
        'sectionId': 'profile-reseaux-sociaux',
        'sectionTitle': 'layout.compte.reseaux_sociaux',
        'contentId': 'reseauxSociauxContent',
        'content': controller('DtUserBundle:Compte:showReseauxSociaux', {'slug': app.request.get('slug') })
    },
    'about_user': {
        'sectionId': 'profile-a-propos-de-moi',
        'sectionTitle': 'layout.compte.about_user_reply',
        'contentId': 'aboutUserReplyContent',
        'content': controller('DtUserBundle:Compte:showAboutUserReply', {'slug': app.request.get('slug') })
    }
}
%}

{% for content in tabsContent %}

    <div class="section-anchor-js">
        <h3 class="page-header" id="{{ content.sectionId }}">
            {{ content.sectionTitle|trans({}, 'FOSUserBundle') }}
        </h3>
        <div id="{{ content.contentId }}">
            <div class="viewContent">
                {{ render(content.content) }}
            </div>
            <div class="formContent hidden">
            </div>
        </div>
    </div>
    
{% endfor %}    